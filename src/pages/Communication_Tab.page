<apex:page standardController="Case" extensions="CaseExtensionController" tabStyle="Case">
    
    <apex:includeLightning />
   
        <apex:pageBlock title="Member Comments">
        <apex:pageBlockTable value="{!membercommentlist}" var="mc"> <!-- The pageBlockTable iterates the Member Comments Object -->
            <apex:column value="{!mc.Createdby.Name}"/> <!--Display the CaseComments information -->
            <apex:column value="{!mc.CreatedDate}"/>
            <apex:column value="{!mc.Member_Communication__c}"/>
        </apex:pageBlockTable>
        </apex:pageBlock>
    
            <apex:pageBlock title="Case Comments" mode="new" > 
        	<apex:pageBlockTable value="{!casecommentlist}" var="c"> <!-- The pageBlockTable iterates the Case Comments Object -->
                <apex:column value="{!c.Createdby.Name}"/> <!--Display the CaseComments information -->
                <apex:column value="{!c.CreatedDate}"/>
                <apex:column value="{!c.CommentBody}"/>       
         	</apex:pageBlockTable>
        </apex:pageBlock>

</apex:page>